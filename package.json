{
  "name": "aura-hub-server",
  "version": "1.0.1",
  "description": "Backend API for Aura-Hub (Node + TypeScript + Express + MySQL)",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist node_modules package-lock.json",
    "prebuild": "npm install --include=dev",
    "build": "echo Starting TypeScript build... && npm run clean-dist && npx tsc --skipLibCheck && echo Build completed successfully!",
    "clean-dist": "rimraf dist",
    "postbuild": "echo TypeScript compilation finished && dir dist 2>nul || echo No dist directory found",
    "start": "echo Starting server... && node dist/index.js || node index.js",
    "dev": "ts-node-dev --respawn --transpile-only index.ts"
  },
  "keywords": [
    "api",
    "aura-hub",
    "express",
    "typescript",
    "mysql",
    "backend"
  ],
  "author": "Equipe Aura Hub",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.24",
    "@types/nodemailer": "^6.4.14",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.3",
    "nodemailer": "^6.9.7",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "rimraf": "^6.1.0",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
